{% extends 'base.html.twig' %}

{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}

{% block meta_description %}
S'inscrire
{% endblock %}

{% block title %}S'inscrire {{parent()}}{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="d-flex align-items-center justify-content-center m-5 p-5 text-light">
    <div>
        <div class="p-5 container" style="max-width: 400px">
            <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}
                <div class="d-flex justify-content-around">
                    <button type="submit" class="btn btn-secondary btn-lg m-2 px-4 text-light">Inscription</button>
                    <a aria-label="Connexion" class="btn btn-primary btn-lg m-2 px-4 text-light" href="{{ path('app_login') }}">Connexion</a>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
