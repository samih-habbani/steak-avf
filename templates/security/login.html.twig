{% extends 'base.html.twig' %}

{% block meta_description %}

{% endblock %}

{% block title %}Log in! {{parent()}}{% endblock %}

{% block body %}
<div class="d-flex align-items-center justify-content-center m-5 p-5">
    <div>
        <form method="post" class="text-light">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {# {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a aria-label="Se déconnecter" href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %} #}
            <div class="p-5 container" style="max-width: 400px">
                <h1 class="h3 mb-3 font-weight-normal text-center">Se connecter</h1>
                <label for="inputEmail" class="mb-2">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control bg-warning text-light" autocomplete="email" required autofocus>
                <label for="inputPassword" class="my-2">Mot de passe</label> <a aria-label="Mot de passe oublié" class="text-decoration-none float-end text-secondary my-2" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié?</a>
                <input type="password" name="password" id="inputPassword" class="form-control bg-warning text-light" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="d-flex justify-content-around">
                    <button class="btn btn-lg btn-primary m-2 px-4 text-light" type="submit">Connexion</button>

                    <a aria-label="S'inscrire" class="btn btn-secondary btn-lg m-2 px-4 text-light" href="{{ path('app_register') }}">Inscription</a>
                </div>

            </div>
        </form>
    </div>
</div>
{% endblock %}
